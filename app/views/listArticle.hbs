{{setVar "userId" user.id }}
<div class="container">
    <div class="layout">
        <div class="category-filters">
            {{#each category}}
            <a href="/articles/{{this.name}}">
                <button type="button" class="btn btn-light">{{this.name}}</button>
            </a>
            {{/each}}
            <a href="/articles">
                <button type="button" class="btn btn-light">Aucun filtre </button>
            </a>
        </div>
    </div>

    <div class="layout">
        {{#each article}}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p> {{this.body}}</p>
                <div class="article--footer">
                    {{#ifCond ../userId user_id}}
                    <div class="article--action">
                        <a href="/article/{{this.id}}/edit"> Editer </a> |
                        <a href="/article/supprimer/{{this.id}}">Supprimer</a> </div>
                    {{/ifCond}}
                    <a class="read-more" href="/article/{{this.id}}"> Voir plus</a>

                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>